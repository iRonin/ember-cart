<div class="ec-cart-name" {{action "toggleCartItems"}}>
  {{cart.name}} ({{cart.cartItemsCount}})
</div>
{{#unless isCartItemsHidden}}
  {{view EmberCart.MiniCartItemList cartItemsBinding="cart.cart_items"}}
{{/unless}}
<div class="ec-bottom-bar">
  <span>
    {{t cart.total}} <span class="ec-money">{{t currency.unit}}{{cart.total}}</span>
  </span>
  <span><a href="#">{{t links.checkout}}</span>
</div>
